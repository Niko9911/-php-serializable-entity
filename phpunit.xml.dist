<phpunit bootstrap="vendor/autoload.php">

    <testsuites>
        <testsuite name="Default">
            <directory>tests</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">./src</directory>
            <exclude>
                <directory suffix="Exception.php">./src</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>